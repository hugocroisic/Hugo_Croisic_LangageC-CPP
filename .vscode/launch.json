{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (Active File)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++20",
        "-Iinclude",
        "${file}",
        "-o",
        "bin/${fileBasenameNoExtension}.exe",
        "-O2",
        "-Wall",
        "-Wextra",
        "-Wpedantic"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run (Active File)",
      "type": "shell",
      "command": "bin/${fileBasenameNoExtension}.exe",
      "dependsOn": "Build (Active File)"
    }
  ]
}
